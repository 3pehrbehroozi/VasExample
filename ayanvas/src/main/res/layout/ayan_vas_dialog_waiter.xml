<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="280dp" android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="@dimen/ayanMainPadding">

    <TextView
            android:id="@+id/waitTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="لطفا صبر کنید..."
            android:textColor="#000"/>

    <ir.alirezabdn.wp7progress.WP7ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/waitTv"
            app:indicatorColor="@color/ayanAccent"
            android:layout_marginTop="@dimen/ayanMainPadding"
            app:indicatorRadius="7"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".ui.AuthenticationActivity">

    <ir.alirezabdn.wp7progress.WP10ProgressBar
            android:id="@+id/wp10pbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorHeight="10"
            app:indicatorRadius="10"
            android:layout_centerInParent="true"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textColor="#000"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/wp10pbar"
              android:layout_marginTop="@dimen/ayanMainPadding"
              android:text="لطفا صبر کنید..."/>

    <ImageView
            android:id="@+id/iconIv"
            android:layout_width="@dimen/ayanIconIv" android:layout_height="@dimen/ayanIconIv"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/wp10pbar"
            android:layout_marginBottom="@dimen/ayanMainPadding"/>

    <FrameLayout
            android:id="@+id/fragmentContainerFl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</RelativeLayout>